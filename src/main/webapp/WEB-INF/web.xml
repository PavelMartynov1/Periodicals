<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <request-character-encoding>UTF-8</request-character-encoding>
    <response-character-encoding>UTF-8</response-character-encoding>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.example.Periodicals.Controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/app/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.example.Periodicals.filters.EncodingFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.example.Periodicals.filters.SecurityFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SessionLocaleFilter</filter-name>
        <filter-class>com.example.Periodicals.filters.SessionLocaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionLocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.example.Periodicals.listeners.UserListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.example.Periodicals.listeners.ContextListener</listener-class>
    </listener>
    <resource-ref>
        <description>Periodicals</description>
        <res-ref-name>jdbc/periodicals</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/jsp/error403.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/error500.jsp</location>
    </error-page>
    <!--
    <context-param>
        <param-name>log4j-configuration-loc</param-name>
        <param-value>/WEB-INF/log4j.properties</param-value>
    </context-param>
    -->
</web-app>